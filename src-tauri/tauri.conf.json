{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Savor",
  "version": "0.1.0",
  "identifier": "com.savor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "余香 Savor",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI 驱动的写作风格学习工具",
    "longDescription": "余香 (Savor) 通过 AI 分析你的写作修改习惯，自动提炼并进化你的个人写作风格规则。支持 Diff 对比分析、Skill 版本管理、多格式导出。",
    "copyright": "Copyright © 2026 fengin. MIT License.",
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": [
          "SimpChinese",
          "English"
        ]
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ]
      }
    }
  }
}